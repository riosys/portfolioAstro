    <button aria-label="Menu" id="menuMobile" class="sm:hidden max-sm:pr-4">
        <svg
            class="group-focus:-rotate-90 group-focus:duration-200 material-symbols-outlined scale-150"
            xmlns="http://www.w3.org/2000/svg"
            height="24"
            viewBox="0 -960 960 960"
            width="24"
            ><path
                d="M120-240v-80h720v80H120Zm0-200v-80h720v80H120Zm0-200v-80h720v80H120Z"
                fill="currentColor"></path></svg
        >
    </button>
</header>

<script>
    const menuMobile = document.getElementById("menuMobile");
    const headerMenu = document.getElementById("headerMenu");

    // Función para ocultar el menú si se hace clic fuera de él
    function closeMenuOnClickOutside(event) {
        if (!headerMenu.contains(event.target) && event.target !== menuMobile) {
            headerMenu.classList.add("hidden");
            menuMobile.classList.remove("group");
            // Eliminar el event listener después de ocultar el menú
            document.removeEventListener("click", closeMenuOnClickOutside);
        }
    }

    menuMobile.addEventListener("click", (event) => {
        event.stopPropagation(); // Evitar que el clic se propague al documento
        headerMenu.classList.toggle("hidden");
        menuMobile.classList.toggle("group");

        // Agregar event listener para cerrar el menú si se hace clic en cualquier otro lugar de la página
        document.addEventListener("click", closeMenuOnClickOutside);
    });

    const numbers = document.querySelector("#numbers");

    for (let i = 1; i < 100; i++) {
        numbers.innerHTML += `<p>${i}</p>`;
    }
</script>
